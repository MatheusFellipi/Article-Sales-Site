{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@modules/*": ["Modules/*"],
      "@errors/*": ["Errors/*"],
      "@config/*": ["Config/*"],
      "@shared/*": ["Shared/*"],
      "@utils/*": ["Utils/*"]
    },
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  }
}
